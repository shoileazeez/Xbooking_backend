# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (for production)
DATABASE_URL=postgresql://user:password@localhost:5432/xbooking

# Email Configuration (Mailjet)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DEFAULT_FROM_EMAIL=noreply@xbooking.com
DEFAULT_FROM_NAME=XBooking

# Mailjet Configuration
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_SECRET_KEY=your-mailjet-secret-key
MAILJET_FROM_EMAIL=noreply@xbooking.com
MAILJET_FROM_NAME=XBooking
MAILJET_TEMPLATE_LANGUAGE=true

# SMTP Configuration (Alternative to Mailjet)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=30  # minutes
JWT_REFRESH_TOKEN_LIFETIME=1  # days

# External APIs
DICEBEAR_API_URL=https://api.dicebear.com/7.x/initials/svg

# Payment Gateways (Future)
PAYSTACK_SECRET_KEY=your-paystack-secret-key
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key

# Security Settings
CORS_ALLOW_ALL_ORIGINS=True

# Logging
LOG_LEVEL=INFO
